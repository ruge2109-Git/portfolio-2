---
import type { Language } from '@domain/types/Language';
import { translations } from '@shared/di/container';
import { projectService } from '@shared/di/container';
import ProjectCard from '@presentation/components/ProjectCard.astro';

interface Props {
  lang?: Language;
}

const { lang = 'es' } = Astro.props;
const t = translations.getTranslations(lang);
const featuredProjects = await projectService.getFeaturedProjects();
---

<section id="projects" class="relative py-16 sm:py-20 lg:py-24 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-gray-100 via-gray-50 to-white dark:from-gray-900 dark:via-gray-950 dark:to-gray-950 overflow-hidden">
  <div class="absolute inset-0 opacity-5 dark:opacity-10">
    <div class="absolute inset-0" style="background-image: linear-gradient(to right, gray 1px, transparent 1px), linear-gradient(to bottom, gray 1px, transparent 1px); background-size: 50px 50px;"></div>
  </div>

  <div class="relative max-w-7xl mx-auto z-10">
    <div class="text-center mb-12 sm:mb-16 lg:mb-20 animate-fade-in-down">
      <div class="inline-block mb-3 sm:mb-4">
        <span class="px-3 py-1.5 sm:px-4 sm:py-2 rounded-full text-xs sm:text-sm font-semibold bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border-2 border-gray-300 dark:border-gray-700 shadow-md">
          Portfolio
        </span>
      </div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-black font-display text-gray-900 dark:text-gray-50 mb-4 sm:mb-6 tracking-tight px-2">
        {t.projects.featured}
      </h2>
      <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto font-medium px-4">
        {t.projects.subtitle}
      </p>
    </div>
    
    {featuredProjects.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8 lg:gap-10">
        {featuredProjects.map((project, index) => (
          <div style={`animation-delay: ${index * 0.1}s;`} class="animate-fade-in-up">
            <ProjectCard project={project} lang={lang} />
          </div>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 sm:py-16">
        <p class="text-lg sm:text-xl text-gray-600 dark:text-gray-400 font-medium">
          {t.projects.noProjects}
        </p>
      </div>
    )}
  </div>
</section>
