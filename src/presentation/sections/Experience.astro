---
import type { Language } from '@domain/types/Language';
import { translations } from '@shared/di/container';
import { configService } from '@shared/di/container';

interface Props {
  lang?: Language;
}

const { lang = 'es' } = Astro.props;
const t = translations.getTranslations(lang);
const config = await configService.getConfig();
---

<section id="experience" class="relative py-16 sm:py-20 lg:py-24 px-4 sm:px-6 lg:px-8 bg-white dark:bg-gray-950 overflow-hidden"><div class="absolute inset-0 opacity-5 dark:opacity-10">
    <div class="absolute inset-0" style="background-image: radial-gradient(circle, gray 1px, transparent 1px); background-size: 30px 30px;"></div>
  </div>

  <div class="relative max-w-7xl mx-auto z-10">
    <div class="text-center mb-12 sm:mb-16 lg:mb-20 animate-fade-in-down">
      <div class="inline-block mb-3 sm:mb-4">
        <span class="px-3 py-1.5 sm:px-4 sm:py-2 rounded-full text-xs sm:text-sm font-semibold bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border-2 border-gray-300 dark:border-gray-700 shadow-md">
          Carrera
        </span>
      </div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-black font-display text-gray-900 dark:text-gray-50 mb-4 sm:mb-6 tracking-tight px-2">
        {t.experience.title}
      </h2>
      <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto font-medium px-4">
        {t.experience.subtitle}
      </p>
    </div>
    
    <div class="max-w-5xl mx-auto">
      <div class="relative"><div class="absolute left-6 sm:left-10 md:left-14 top-0 bottom-0 w-1 sm:w-1.5 bg-gradient-to-b from-gray-300 via-gray-500 to-gray-300 dark:from-gray-700 dark:via-gray-500 dark:to-gray-700 rounded-full shadow-lg"></div>
        
        <div class="space-y-12 sm:space-y-16">
          {config.experience.map((exp, index) => (
            <div class="relative pl-16 sm:pl-24 md:pl-28 animate-fade-in-up" style={`animation-delay: ${index * 0.2}s;`}><div class="absolute left-4 sm:left-8 md:left-11 top-2 sm:top-3 w-6 h-6 sm:w-8 sm:h-8 rounded-full bg-gray-900 dark:bg-gray-100 border-4 border-white dark:border-gray-950 shadow-xl hover:scale-125 transition-transform duration-300 z-10 ring-2 sm:ring-4 ring-gray-200 dark:ring-gray-800"></div>
              
              <div class="relative bg-gradient-to-br from-gray-50 to-white dark:from-gray-900 dark:to-gray-950 rounded-2xl sm:rounded-3xl p-6 sm:p-8 md:p-10 border-2 border-gray-200 dark:border-gray-800 hover:border-gray-400 dark:hover:border-gray-600 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-[1.02] overflow-hidden"><div class="absolute top-0 right-0 w-32 h-32 sm:w-40 sm:h-40 bg-gray-200 dark:bg-gray-800 opacity-20 rounded-bl-full"></div>
                
                <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-4 sm:mb-6 gap-3 sm:gap-4 relative z-10">
                  <div>
                    <h3 class="text-xl sm:text-2xl md:text-3xl font-black text-gray-900 dark:text-gray-50 mb-2 sm:mb-3">
                      {exp.title}
                    </h3>
                    <p class="text-lg sm:text-xl md:text-2xl text-gray-700 dark:text-gray-300 font-bold">
                      {exp.company}
                    </p>
                  </div>
                  <span class="inline-flex items-center px-4 sm:px-5 py-2 sm:py-2.5 rounded-lg sm:rounded-xl text-xs sm:text-sm font-bold bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border-2 border-gray-300 dark:border-gray-700 shadow-md w-fit">
                    {exp.period}
                  </span>
                </div>
                <p class="text-sm sm:text-base md:text-lg lg:text-xl text-gray-600 dark:text-gray-400 leading-relaxed relative z-10">
                  {lang === 'es' ? exp.description.es : exp.description.en}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
      
      <div class="text-center mt-12 sm:mt-16 lg:mt-20 animate-fade-in-up">
        <a
          href={config.personal.cvUrl}
          download
          class="group relative inline-flex items-center justify-center px-8 sm:px-10 py-4 sm:py-5 rounded-xl sm:rounded-2xl font-black text-base sm:text-lg bg-gray-900 dark:bg-gray-100 text-gray-50 dark:text-gray-900 hover:bg-gray-800 dark:hover:bg-gray-200 transition-all duration-300 hover:scale-105 shadow-2xl hover:shadow-3xl hover:shadow-gray-900/50 dark:hover:shadow-gray-100/50 overflow-hidden"
        >
          <span class="absolute inset-0 bg-gradient-to-r from-gray-700 to-gray-900 dark:from-gray-200 dark:to-gray-100 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></span>
          <svg class="w-5 h-5 sm:w-6 sm:h-6 mr-2 sm:mr-3 relative z-10 group-hover:translate-y-1 transition-transform duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <span class="relative z-10">{t.experience.downloadCV}</span>
        </a>
      </div>
    </div>
  </div>
</section>
