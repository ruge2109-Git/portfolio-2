---
import type { Language } from '@domain/types/Language';
import { translations } from '@shared/di/container';
import { configService } from '@shared/di/container';

interface Props {
  lang?: Language;
}

const { lang = 'es' } = Astro.props;
const t = translations.getTranslations(lang);
const config = await configService.getConfig();
---

<section id="skills" class="relative py-16 sm:py-20 lg:py-24 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-gray-50 via-gray-100 to-gray-50 dark:from-gray-950 dark:via-gray-900 dark:to-gray-950 overflow-hidden"><div class="absolute inset-0 opacity-5 dark:opacity-10">
    <div class="absolute inset-0" style="background-image: linear-gradient(to right, gray 1px, transparent 1px), linear-gradient(to bottom, gray 1px, transparent 1px); background-size: 50px 50px;"></div>
  </div>

  <div class="relative max-w-7xl mx-auto z-10">
    <div class="text-center mb-12 sm:mb-16 lg:mb-20 animate-fade-in-down">
      <div class="inline-block mb-3 sm:mb-4">
        <span class="px-3 py-1.5 sm:px-4 sm:py-2 rounded-full text-xs sm:text-sm font-semibold bg-gray-200 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border-2 border-gray-300 dark:border-gray-700 shadow-md">
          Tecnolog√≠as
        </span>
      </div>
      <h2 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl xl:text-7xl font-black font-display text-gray-900 dark:text-gray-50 mb-4 sm:mb-6 tracking-tight px-2">
        {t.skills.title}
      </h2>
      <p class="text-base sm:text-lg md:text-xl lg:text-2xl text-gray-600 dark:text-gray-400 max-w-3xl mx-auto font-medium px-4">
        {t.skills.subtitle}
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 sm:gap-8 lg:gap-10 max-w-6xl mx-auto"><div class="group relative bg-white dark:bg-gray-900 rounded-2xl sm:rounded-3xl p-6 sm:p-8 border-2 border-gray-200 dark:border-gray-800 hover:border-gray-400 dark:hover:border-gray-600 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105 animate-fade-in-up overflow-hidden"><div class="absolute top-0 right-0 w-24 h-24 sm:w-32 sm:h-32 bg-gray-100 dark:bg-gray-800 opacity-50 rounded-bl-full"></div>
        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-gray-50 mb-6 sm:mb-8 flex items-center gap-3 sm:gap-4 relative z-10">
          <div class="p-3 sm:p-4 rounded-xl sm:rounded-2xl bg-gray-100 dark:bg-gray-800 group-hover:bg-gray-200 dark:group-hover:bg-gray-700 transition-colors duration-300 shadow-lg">
            <svg class="w-5 h-5 sm:w-7 sm:h-7 text-gray-700 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>
          <span>{t.skills.frontend}</span>
        </h3>
        <div class="flex flex-wrap gap-2 sm:gap-3 relative z-10">
          {config.skills.frontend.map((skill, index) => (
            <span 
              class="inline-flex items-center px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg sm:rounded-xl text-xs sm:text-sm font-semibold bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border-2 border-gray-300 dark:border-gray-700 hover:bg-gray-200 dark:hover:bg-gray-700 hover:scale-110 hover:shadow-lg transition-all duration-300"
              style={`animation-delay: ${index * 0.05}s;`}
            >
              {skill}
            </span>
          ))}
        </div>
      </div><div class="group relative bg-white dark:bg-gray-900 rounded-2xl sm:rounded-3xl p-6 sm:p-8 border-2 border-gray-200 dark:border-gray-800 hover:border-gray-400 dark:hover:border-gray-600 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105 animate-fade-in-up overflow-hidden" style="animation-delay: 0.1s;"><div class="absolute top-0 right-0 w-24 h-24 sm:w-32 sm:h-32 bg-gray-100 dark:bg-gray-800 opacity-50 rounded-bl-full"></div>
        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-gray-50 mb-6 sm:mb-8 flex items-center gap-3 sm:gap-4 relative z-10">
          <div class="p-3 sm:p-4 rounded-xl sm:rounded-2xl bg-gray-100 dark:bg-gray-800 group-hover:bg-gray-200 dark:group-hover:bg-gray-700 transition-colors duration-300 shadow-lg">
            <svg class="w-5 h-5 sm:w-7 sm:h-7 text-gray-700 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
            </svg>
          </div>
          <span>{t.skills.backend}</span>
        </h3>
        <div class="flex flex-wrap gap-2 sm:gap-3 relative z-10">
          {config.skills.backend.map((skill, index) => (
            <span 
              class="inline-flex items-center px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg sm:rounded-xl text-xs sm:text-sm font-semibold bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border-2 border-gray-300 dark:border-gray-700 hover:bg-gray-200 dark:hover:bg-gray-700 hover:scale-110 hover:shadow-lg transition-all duration-300"
              style={`animation-delay: ${index * 0.05}s;`}
            >
              {skill}
            </span>
          ))}
        </div>
      </div><div class="group relative bg-white dark:bg-gray-900 rounded-2xl sm:rounded-3xl p-6 sm:p-8 border-2 border-gray-200 dark:border-gray-800 hover:border-gray-400 dark:hover:border-gray-600 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-105 animate-fade-in-up overflow-hidden" style="animation-delay: 0.2s;"><div class="absolute top-0 right-0 w-24 h-24 sm:w-32 sm:h-32 bg-gray-100 dark:bg-gray-800 opacity-50 rounded-bl-full"></div>
        <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-gray-50 mb-6 sm:mb-8 flex items-center gap-3 sm:gap-4 relative z-10">
          <div class="p-3 sm:p-4 rounded-xl sm:rounded-2xl bg-gray-100 dark:bg-gray-800 group-hover:bg-gray-200 dark:group-hover:bg-gray-700 transition-colors duration-300 shadow-lg">
            <svg class="w-5 h-5 sm:w-7 sm:h-7 text-gray-700 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z" />
            </svg>
          </div>
          <span>{t.skills.cloud}</span>
        </h3>
        <div class="flex flex-wrap gap-2 sm:gap-3 relative z-10">
          {config.skills.cloud.map((skill, index) => (
            <span 
              class="inline-flex items-center px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg sm:rounded-xl text-xs sm:text-sm font-semibold bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border-2 border-gray-300 dark:border-gray-700 hover:bg-gray-200 dark:hover:bg-gray-700 hover:scale-110 hover:shadow-lg transition-all duration-300"
              style={`animation-delay: ${index * 0.05}s;`}
            >
              {skill}
            </span>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
