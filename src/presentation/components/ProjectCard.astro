---
/**
 * Presentation Component: ProjectCard
 * Displays a single project card with all its information
 */
import type { Project } from '@domain/entities/Project';
import type { Language } from '@domain/types/Language';
import { translations } from '@shared/di/container';
import { formatDate } from '@shared/utils/date';
import { formatProjectTitle } from '@shared/utils/string';

interface Props {
  project: Project;
  lang?: Language;
}

const { project, lang = 'es' } = Astro.props;
const t = translations.getTranslations(lang);
---

<article class="group relative bg-white dark:bg-gray-900 rounded-2xl sm:rounded-3xl p-6 sm:p-8 border-2 border-gray-200 dark:border-gray-800 hover:border-gray-400 dark:hover:border-gray-600 shadow-xl hover:shadow-2xl transition-all duration-500 hover:scale-[1.02] hover:-translate-y-2 sm:hover:-translate-y-3 animate-fade-in-up overflow-hidden h-full flex flex-col">
  <!-- Decorative gradient overlay on hover -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-50 to-transparent dark:from-gray-800/50 dark:to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none"></div>
  
  <!-- Content -->
  <div class="relative z-10 flex flex-col flex-1">
    <!-- Header -->
    <div class="mb-4 sm:mb-5">
      <h3 class="text-xl sm:text-2xl font-bold text-gray-900 dark:text-gray-50 group-hover:text-gray-700 dark:group-hover:text-gray-300 transition-colors duration-300 mb-2 line-clamp-2">
        {formatProjectTitle(project.title)}
      </h3>
      {project.stars > 0 && (
        <div class="flex items-center gap-1.5 text-gray-500 dark:text-gray-400">
          <svg class="w-4 h-4 sm:w-5 sm:h-5" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
          </svg>
          <span class="text-xs sm:text-sm font-semibold">{project.stars}</span>
        </div>
      )}
    </div>
    
    <!-- Description -->
    <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400 mb-4 sm:mb-6 line-clamp-3 sm:line-clamp-2 leading-relaxed flex-1">
      {t.projects.descriptions[project.title as keyof typeof t.projects.descriptions] || project.description}
    </p>
    
    <!-- Stack -->
    {project.stack.length > 0 && (
      <div class="flex flex-wrap gap-2 mb-4 sm:mb-6">
        {project.stack.slice(0, 4).map((tech) => (
          <span class="inline-flex items-center px-2.5 sm:px-3.5 py-1 sm:py-1.5 rounded-lg text-xs font-semibold bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border border-gray-300 dark:border-gray-700">
            {tech}
          </span>
        ))}
        {project.stack.length > 4 && (
          <span class="inline-flex items-center px-2.5 sm:px-3.5 py-1 sm:py-1.5 rounded-lg text-xs font-semibold bg-gray-100 dark:bg-gray-800 text-gray-700 dark:text-gray-300 border border-gray-300 dark:border-gray-700">
            +{project.stack.length - 4}
          </span>
        )}
      </div>
    )}
    
    <!-- Footer -->
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-3 sm:gap-0 pt-4 sm:pt-6 border-t-2 border-gray-200 dark:border-gray-800 mt-auto">
      <span class="text-xs sm:text-sm font-medium text-gray-500 dark:text-gray-500">
        {formatDate(project.lastUpdate, lang)}
      </span>
      
      <div class="flex items-center gap-2 sm:gap-3">
        <a
          href={project.github}
          target="_blank"
          rel="noopener noreferrer"
          class="group/btn inline-flex items-center justify-center px-4 sm:px-5 py-2 sm:py-2.5 rounded-xl text-xs sm:text-sm font-semibold text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 border border-gray-300 dark:border-gray-700 transition-all duration-300 hover:scale-105 hover:shadow-lg flex-1 sm:flex-none"
          aria-label={`Ver cÃ³digo de ${project.title}`}
        >
          <svg class="w-3.5 h-3.5 sm:w-4 sm:h-4 mr-1.5 sm:mr-2 group-hover/btn:rotate-12 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
          </svg>
          <span class="hidden sm:inline">{t.projects.viewCode}</span>
          <span class="sm:hidden">Code</span>
        </a>
        
        {project.demo && (
          <a
            href={project.demo}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-4 sm:px-5 py-2 sm:py-2.5 rounded-xl text-xs sm:text-sm font-bold bg-gray-900 dark:bg-gray-100 text-gray-50 dark:text-gray-900 hover:bg-gray-800 dark:hover:bg-gray-200 transition-all duration-300 hover:scale-105 hover:shadow-xl shadow-lg flex-1 sm:flex-none"
            aria-label={`Ver demo de ${project.title}`}
          >
            {t.projects.viewDemo}
          </a>
        )}
      </div>
    </div>
  </div>
</article>
