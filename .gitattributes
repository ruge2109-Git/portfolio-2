# Auto detect text files and perform LF normalization
* text=auto

# Force LF for all text files
*.ts text eol=lf
*.tsx text eol=lf
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.md text eol=lf
*.css text eol=lf
*.html text eol=lf
*.astro text eol=lf
*.mjs text eol=lf
*.cjs text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.txt text eol=lf
*.xml text eol=lf
*.svg text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.zip binary
*.tar binary
*.gz binary

# Git files
*.gitignore text eol=lf
*.gitattributes text eol=lf

# Config files
.env* text eol=lf
.editorconfig text eol=lf
.prettierrc text eol=lf
.eslintrc* text eol=lf
